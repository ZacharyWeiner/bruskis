<%= simple_form_for(@roast, :HTML => {multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :roast_type %>
    <%= f.input :description %>
    <%= f.file_field :picture %>
    <%= f.association :brand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
